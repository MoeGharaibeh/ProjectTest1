@{
    ViewData["Title"] = "Projects";
}
<h1>Projects </h1>
<a href="/Project/Create" class="btn btn-primary mb-4">Create a new Project</a>
<table class="table ">
    <thead>
        <tr>
            <th>Project ID </th>
            <th>Title </th>
            <th>Descrption</th>
            <th>Developers </th>
            <th></th>
  
        </tr>
    </thead>
    <tbody>
        @foreach (var project in (List<Project>)ViewBag.AllProjects)
        {
        <tr>
            <td>@project.Id</td>
            <td>@project.Title</td>
            <td>@project.Description</td>
            <td>@Status.Completed</td>


            <td>
                @foreach (var item in project.ProjectDevelopers)
                {
                    <span>@item.Developer.FirstName &nbsp;</span>
                }
            </td>

            <td>
                <a href="/Project/Edit?id=@project.Id" class="btn btn-primary">Edit</a>
                <a href="/Sprint/AllSprints?id=@project.Id" class="btn btn-primary">Sprint</a>
                <a href="/Project/Remove?id=@project.Id" class="btn btn-primary">Sprint</a>
            </td>

            @if (project.status == Status.Completed)
            {
        <td class="text-primary">Completed</td>
            }
            else
            {
                <td class="text-danger">Pendding</td>

            }
        </tr>
        }
    </tbody>
</table>