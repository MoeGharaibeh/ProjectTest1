
@{
    ViewData["Title"] = "EditSprint";
}

<h1>Edit Sprint</h1>

@model ProjectTest1.Dto.EditSprintDto


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditSprint">



            <input type="hidden" asp-for="Id" value="@ViewBag.sprint.Id" />


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" value="@ViewBag.sprint.Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" value="@ViewBag.sprint.Description" >
       
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>


      

            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>

   
                <input disabled asp-for="EndDate" class="form-control" value="@ViewBag.sprint.EndDate">
                <div><span>@ViewBag.sprint.EndDate</span></div>
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ShowSprints">Back to List</a>
</div>

