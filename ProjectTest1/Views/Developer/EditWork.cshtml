@model ProjectTest1.Dto.EditWorkDto

@{
    ViewData["Title"] = "EditWork";

}




<h1><img src="https://img.icons8.com/color/48/000000/edit--v3.png" /> Edit Work</h1>


<h4>EditWorkDto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditWork">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" hidden="hidden">
                @Html.HiddenFor(x=>x.Id)
            </div>
            <div class="form-group">
                <label asp-for="Title"  class="control-label"></label>
                <input asp-for="Title" value="@ViewBag.tasks.Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" value="@ViewBag.tasks.Title" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a href="showProjects" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>

